# ============ HOTLINK PROTECTION ============
# Prevent other sites from embedding your images
<IfModule mod_rewrite.c>
    RewriteEngine on
    # Allow your domain and Google (for image search)
    RewriteCond %{HTTP_REFERER} !^$
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?toolnest\.bhaihelp\.in [NC]
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?google\. [NC]
    RewriteCond %{HTTP_REFERER} !^https?://(www\.)?bing\. [NC]
    # Block hotlinking of images
    RewriteRule \.(jpg|jpeg|png|gif|webp)$ - [F,NC]
</IfModule>

# ============ CORS HEADERS (if needed for fonts/API) ============
<IfModule mod_headers.c>
    # Allow fonts from any origin
    <FilesMatch "\.(ttf|ttc|otf|eot|woff|woff2|font.css)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
    
    # Allow CORS for JSON files (for blog-data.json)
    <FilesMatch "\.json$">
        Header set Access-Control-Allow-Origin "*"
        Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
        Header set Access-Control-Allow-Headers "Content-Type"
    </FilesMatch>
</IfModule>

# ============ PERFORMANCE OPTIMIZATIONS ============
# Keep-Alive: Persistent connections
<IfModule mod_headers.c>
    Header set Connection keep-alive
</IfModule>

# ETags (for caching)
<IfModule mod_headers.c>
    # Remove ETags (can cause issues with multiple servers)
    Header unset ETag
</IfModule>
FileETag None

# ============ DISABLE SERVER SIGNATURE ============
# Don't reveal server information
ServerSignature Off

# ============ CHARSET ============
AddDefaultCharset UTF-8

# ============ PREVENT ACCESS TO CERTAIN FILES ============
# Deny access to specific file types
<FilesMatch "\.(md|lock|yml|yaml|config|bak|old)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# ============ BLOCK BAD BOTS & SCRAPERS ============
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Block bad bots
    RewriteCond %{HTTP_USER_AGENT} (ahrefs|semrush|mj12bot|rogerbot|exabot|wget|curl) [NC]
    RewriteRule .* - [F,L]
</IfModule>

